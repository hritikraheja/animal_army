<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">\

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/animal_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_play_button"
        app:layout_constraintTop_toTopOf="@id/thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail"
        app:layout_constraintLeft_toLeftOf="@id/thumbnail"
        app:layout_constraintRight_toRightOf="@id/thumbnail"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/animal_aid_unlimited"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/thumbnail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Puppy's paw was crushed and degloved, but when he healed, he sang!"
        android:paddingLeft="10dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/thumbnail"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/channel"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:textSize="18sp"
        android:text="Animal Aid Unlimited, India"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>